<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @table.name %>
</p>
<div>
  <input type="text" id="main_input">
</div>
<table>
  <thead>
  <tr>
    <% %w(PENIS A B C D E F G H I J).each do |letter| %>
      <td><%= letter %></td>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= @table.table_rows.count %>
  <% @table.table_rows.order(:order_number).each do |row| %>
    <%= render partial: 'tables/row', locals: { row: row } %>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_table_path(@table) %> |
<%= link_to 'Back', tables_path %>
